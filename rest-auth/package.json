{
  "name": "rest-auth",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.ts --fix .",
    "pretest": "(test ! -f src/config/config.ts && cp src/config/config.sample.ts src/config/config.ts) ; true",
    "precoverage": "npm run pretest",
    "test": "jest --runInBand",
    "coverage": "jest --runInBand --coverage",
    "debug": "LOG_DESTINATION=stdout LOG_LEVEL=debug nodemon --config nodemon.json src/index.ts",
    "style": "prettier --write *.{js,ts} src/**/*.{js,ts}",
    "precommit": "lint-staged",
    "build": "tsc && tsc-alias",
    "ca:create": "mkdir -p certs && openssl req -x509 -sha256 -nodes -subj '/C=FR/O=GREENION/CN=GREENION-CA' -days 1825 -newkey rsa:2048 -keyout certs/rootCA.key.pem -out certs/rootCA.crt.pem"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.1.1",
    "@ory/client": "^1.9.0",
    "@ory/hydra-client": "^2.2.0",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "express": "^4.16.1",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "jose": "^5.7.0",
    "morgan": "^1.9.1",
    "pino-pretty": "^11.2.1",
    "node-forge": "^1.3.1",
    "pino": "^9.2.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node-forge": "^1.3.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-config-prettier": "^8.0.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.5",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^3.15.0",
    "typescript": "^4.9.5"
  }
}
